* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --color-bg: #0f172a;
    --color-bg-secondary: #1e293b;
    --color-bg-tertiary: #334155;
    --color-text: #f1f5f9;
    --color-text-secondary: #94a3b8;
    --color-border: #334155;
    --color-primary: #06b6d4;
    --color-primary-hover: #0891b2;
    --color-primary-light: rgba(6, 182, 212, 0.1);
    --color-success: #10b981;
    --color-danger: #ef4444;
    --color-warning: #f59e0b;
    --color-accent: #8b5cf6;
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

body {
    font-family: var(--font-sans);
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    color: var(--color-text);
    line-height: 1.6;
    min-height: 100vh;
}

.month-separator td {
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-top: 2px solid var(--color-primary) !important;
    border-bottom: 1px solid var(--color-border) !important;
}

.month-separator:first-child td {
    border-top: none !important;
}

.header {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1) 0%, rgba(139, 92, 246, 0.05) 100%);
    backdrop-filter: blur(10px);
    padding: 2.5rem 2rem;
    text-align: center;
    border-bottom: 1px solid rgba(6, 182, 212, 0.2);
    position: relative;
    overflow: hidden;
}

.header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-primary), transparent);
}

.header h1 {
    font-size: 2.75rem;
    font-weight: 800;
    margin-bottom: 0.75rem;
    background: linear-gradient(135deg, #06b6d4 0%, #8b5cf6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
}

.subtitle {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
    font-weight: 500;
}

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
}

.upload-section {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 70vh;
    padding: 2rem;
}

.upload-box {
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.8) 0%, rgba(15, 23, 42, 0.9) 100%);
    border: 2px dashed rgba(6, 182, 212, 0.3);
    border-radius: 24px;
    padding: 5rem 4rem;
    text-align: center;
    max-width: 600px;
    width: 100%;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    position: relative;
    overflow: hidden;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
}

.upload-box::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 50% 0%, rgba(6, 182, 212, 0.1), transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
}

.upload-box:hover::before,
.upload-box.dragover::before {
    opacity: 1;
}

.upload-box:hover,
.upload-box.dragover {
    border-color: var(--color-primary);
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.95) 0%, rgba(15, 23, 42, 1) 100%);
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 30px 60px rgba(6, 182, 212, 0.2);
}

.upload-box svg {
    color: var(--color-primary);
    margin-bottom: 2rem;
    filter: drop-shadow(0 4px 8px rgba(6, 182, 212, 0.3));
    position: relative;
    z-index: 1;
}

.upload-box h2 {
    font-size: 1.875rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-text);
    position: relative;
    z-index: 1;
}

.upload-box p {
    color: var(--color-text-secondary);
    margin-bottom: 2.5rem;
    font-size: 1.125rem;
    position: relative;
    z-index: 1;
}

.btn-primary {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
    color: white;
    border: none;
    padding: 1rem 2.5rem;
    border-radius: 12px;
    font-size: 1.125rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-family: var(--font-sans);
    position: relative;
    z-index: 1;
    box-shadow: 0 8px 20px rgba(6, 182, 212, 0.3);
    letter-spacing: 0.02em;
}

.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 30px rgba(6, 182, 212, 0.5);
}

.btn-primary:active {
    transform: translateY(-1px);
}

.summary-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.summary-card {
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.8) 0%, rgba(15, 23, 42, 0.9) 100%);
    border: 1px solid rgba(6, 182, 212, 0.2);
    border-radius: 16px;
    padding: 2rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.summary-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 100% 0%, rgba(6, 182, 212, 0.1), transparent 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.summary-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 24px rgba(6, 182, 212, 0.2);
    border-color: rgba(6, 182, 212, 0.4);
}

.summary-card:hover::before {
    opacity: 1;
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.card-label {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.card-header svg {
    opacity: 0.5;
}

.summary-card.income .card-header svg {
    color: var(--color-success);
}

.summary-card.expenses .card-header svg {
    color: var(--color-danger);
}

.summary-card.net .card-header svg {
    color: var(--color-warning);
}

.card-value {
    font-size: 2rem;
    font-weight: 700;
}

.summary-card.income .card-value {
    color: var(--color-success);
}

.summary-card.expenses .card-value {
    color: var(--color-danger);
}

.summary-card.net.positive .card-value {
    color: var(--color-success);
}

.summary-card.net.negative .card-value {
    color: var(--color-danger);
}

.budget-month-selector-container {
    margin: 1rem 0;
    display: flex;
    justify-content: center;
}

.budget-month-selector {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
    font-family: var(--font-sans);
    width: 100%;
    cursor: pointer;
    transition: all 0.2s ease;
}

.budget-month-selector:hover {
    border-color: var(--color-primary);
}

.budget-month-selector:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.1);
}

.insights-section {
    margin-bottom: 2rem;
}

.insights-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
}

.insight-card {
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.9) 0%, rgba(15, 23, 42, 0.95) 100%);
    border: 1px solid rgba(6, 182, 212, 0.2);
    border-left: 4px solid var(--color-primary);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
}

.insight-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(6, 182, 212, 0.15);
    border-left-width: 6px;
}

.insight-card.warning {
    border-left-color: var(--color-danger);
}

.insight-card.tip {
    border-left-color: var(--color-warning);
}

.insight-card.recurring {
    border-left-color: #8b5cf6;
}

.insight-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
}

.insight-icon {
    width: 20px;
    height: 20px;
}

.insight-type {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-secondary);
}

.insight-message {
    color: var(--color-text);
    line-height: 1.5;
}

.content-grid {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: 1.5rem;
}

.sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.main-panel {
    min-width: 0;
}

.main-panel.full-width {
    grid-column: 1 / -1;
}

@media (max-width: 1024px) {
    .content-grid {
        grid-template-columns: 1fr;
    }

    .main-panel.full-width {
        grid-column: 1;
    }
}

.panel {
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.8) 0%, rgba(15, 23, 42, 0.9) 100%);
    border: 1px solid rgba(6, 182, 212, 0.2);
    border-radius: 16px;
    padding: 2rem;
    backdrop-filter: blur(10px);
}

.panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.panel-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--color-text);
}

.panel-header .panel-title {
    margin-bottom: 0;
}

.icon-btn {
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    border: none;
    color: white;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 8px rgba(6, 182, 212, 0.3);
}

.icon-btn:hover {
    transform: scale(1.15);
    box-shadow: 0 6px 12px rgba(6, 182, 212, 0.5);
}

.budgets-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.suggested-budget-info {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1) 0%, rgba(16, 185, 129, 0.05) 100%);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
}

.suggested-budget-info h3 {
    color: var(--color-success);
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
}

.suggested-budget-info p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 0;
}

.suggested-budget-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
}

.suggested-budget-card {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 10px;
    padding: 1.25rem;
    transition: all 0.3s ease;
}

.suggested-budget-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(6, 182, 212, 0.15);
}

.suggested-budget-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.suggested-budget-category {
    font-weight: 600;
    color: var(--color-text);
    font-size: 1rem;
}

.suggested-budget-amount {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary);
}

.suggested-budget-details {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--color-border);
}

.suggested-budget-detail {
    display: flex;
    justify-content: space-between;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
}

.suggested-budget-detail-label {
    font-weight: 500;
}

.suggested-budget-detail-value {
    color: var(--color-text);
}

.budget-item {
    background: var(--color-bg-tertiary);
    border-radius: 8px;
    padding: 1rem;
}

.budget-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
}

.budget-category {
    font-weight: 600;
    color: var(--color-text);
}

.budget-amounts {
    display: flex;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
}

.budget-progress-bar {
    background: var(--color-bg);
    height: 8px;
    border-radius: 4px;
    overflow: hidden;
}

.budget-progress-fill {
    height: 100%;
    background: var(--color-success);
    border-radius: 4px;
    transition: width 0.3s ease, background-color 0.3s ease;
}

.budget-progress-fill.warning {
    background: var(--color-warning);
}

.budget-progress-fill.danger {
    background: var(--color-danger);
}

.budget-actions {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.5rem;
}

.btn-small {
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-family: var(--font-sans);
    transition: all 0.2s ease;
}

.btn-delete {
    background: transparent;
    color: var(--color-danger);
}

.btn-delete:hover {
    background: rgba(239, 68, 68, 0.1);
}

.modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    backdrop-filter: blur(8px);
    animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.modal-content {
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.95) 0%, rgba(15, 23, 42, 0.98) 100%);
    border: 1px solid rgba(6, 182, 212, 0.3);
    border-radius: 20px;
    width: 90%;
    max-width: 500px;
    padding: 2.5rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    animation: slideUp 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideUp {
    from {
        transform: translateY(20px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.modal-header h3 {
    font-size: 1.5rem;
    color: var(--color-text);
}

.close-btn {
    background: transparent;
    border: none;
    color: var(--color-text-secondary);
    cursor: pointer;
    padding: 0;
    transition: all 0.2s ease;
}

.close-btn:hover {
    color: var(--color-text);
    transform: rotate(90deg);
}

.budget-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.form-group label {
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.875rem;
}

.form-group input,
.form-group select {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    padding: 0.75rem;
    border-radius: 8px;
    font-size: 1rem;
    font-family: var(--font-sans);
}

.form-group input:focus,
.form-group select:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 1rem;
}

.btn-secondary {
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text);
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: var(--font-sans);
}

.btn-secondary:hover {
    background: var(--color-bg-tertiary);
}

.category-chart {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.category-row {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.category-info {
    display: flex;
    justify-content: space-between;
    font-size: 0.875rem;
}

.category-name {
    font-weight: 500;
    color: var(--color-text);
}

.category-amount {
    color: var(--color-text-secondary);
    font-weight: 600;
}

.category-bar-container {
    background: var(--color-bg-tertiary);
    height: 8px;
    border-radius: 4px;
    overflow: hidden;
}

.category-bar {
    height: 100%;
    background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
    border-radius: 4px;
    transition: width 0.6s ease;
    box-shadow: 0 0 10px rgba(6, 182, 212, 0.5);
}

.filters {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.search-input,
.category-filter {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    padding: 0.625rem 1rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-family: var(--font-sans);
    transition: all 0.2s ease;
}

.search-input {
    flex: 1;
}

.category-filter {
    min-width: 180px;
}

.search-input:focus,
.category-filter:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.table-container {
    overflow-x: auto;
    border-radius: 8px;
    border: 1px solid var(--color-border);
    max-height: 600px;
    overflow-y: auto;
}

.transactions-table {
    width: 100%;
    border-collapse: collapse;
}

.transactions-table thead {
    position: sticky;
    top: 0;
    background: var(--color-bg-tertiary);
    z-index: 10;
}

.transactions-table th {
    padding: 1rem;
    text-align: left;
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 1px solid var(--color-border);
}

.transactions-table td {
    padding: 1rem;
    border-bottom: 1px solid var(--color-border);
    font-size: 0.9rem;
}

.transactions-table tr:hover {
    background: var(--color-bg-tertiary);
}

.description {
    max-width: 300px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.category-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.cat-income { background: rgba(16, 185, 129, 0.15); color: #10b981; }
.cat-rent { background: rgba(239, 68, 68, 0.15); color: #ef4444; }
.cat-food { background: rgba(245, 158, 11, 0.15); color: #f59e0b; }
.cat-utilities { background: rgba(59, 130, 246, 0.15); color: #3b82f6; }
.cat-auto { background: rgba(139, 92, 246, 0.15); color: #8b5cf6; }
.cat-subscriptions { background: rgba(236, 72, 153, 0.15); color: #ec4899; }
.cat-transfers { background: rgba(99, 102, 241, 0.15); color: #6366f1; }
.cat-shopping { background: rgba(20, 184, 166, 0.15); color: #14b8a6; }
.cat-entertainment { background: rgba(244, 114, 182, 0.15); color: #f472b6; }
.cat-charity { background: rgba(34, 197, 94, 0.15); color: #22c55e; }
.cat-uncategorized { background: rgba(156, 163, 175, 0.15); color: #9ca3af; }

.text-right {
    text-align: right;
}

.positive {
    color: var(--color-success);
    font-weight: 600;
}

.negative {
    color: var(--color-danger);
    font-weight: 600;
}

@media (max-width: 768px) {
    .header h1 {
        font-size: 1.875rem;
    }

    .container {
        padding: 1rem;
    }

    .summary-cards {
        grid-template-columns: 1fr;
    }

    .filters {
        flex-direction: column;
    }

    .category-filter {
        width: 100%;
    }

    .description {
        max-width: 150px;
    }
}

.pie-chart-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
    gap: 2rem;
}

#pie-chart {
    max-width: 400px;
    max-height: 400px;
}

.pie-chart-legend {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    width: 100%;
    max-width: 900px;
}

.pie-legend-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    background: var(--color-bg-secondary);
    border-radius: 8px;
    transition: transform 0.2s ease;
}

.pie-legend-item:hover {
    transform: translateY(-2px);
}

.pie-legend-color {
    width: 16px;
    height: 16px;
    border-radius: 4px;
    flex-shrink: 0;
}

.pie-legend-label {
    font-weight: 500;
    color: var(--color-text);
    flex: 1;
}

.pie-legend-value {
    font-weight: 600;
    color: var(--color-primary);
    white-space: nowrap;
}
